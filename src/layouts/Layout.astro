---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Themes from "astro-themes";
import { PageGraph } from "starlight-site-graph/components";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta
			name="description"
			content="The personal website of Colton Loftus"
		/>
		<meta name="generator" content={Astro.generator} />
		<title>colton.place</title>
		<Themes defaultTheme="dark" />
	</head>
	<body class="flex flex-col min-h-screen">
		<div
			style="
				border-top: 10px solid;
				border-image-source: linear-gradient(90deg,#5d2f86,#8ed6fb 50%,#08e756);
				border-image-slice: 1;
				position: fixed;
				top: 0;
				right: 0;
				left: 0;
				z-index: 50;
			"
		>
		</div>

		<Header />

		<div class="relative flex-1">
			<!-- Graph pinned to top-left of content (below header) -->
			<div
				id="astro-site-graph"
				hidden
				class="absolute top-0 left-0 z-40"
			>
				<PageGraph class="p-10" />
			</div>

			<main class="p-4">
				<slot />
			</main>
		</div>

		<script>
			document.addEventListener("DOMContentLoaded", () => {
				const graphContainer =
					document.getElementById("astro-site-graph");

				function updateGraphVisibility(showing: boolean) {
					if (!graphContainer) return;
					graphContainer.hidden = !showing;
				}

				// Initial state
				updateGraphVisibility(
					localStorage.getItem("graph-showing") === "true",
				);

				// Same-tab updates
				window.addEventListener("graph-toggle", (e) => {
					updateGraphVisibility((e as CustomEvent).detail === "true");
				});

				// Cross-tab updates
				window.addEventListener("storage", (e) => {
					if (e.key === "graph-showing") {
						updateGraphVisibility(e.newValue === "true");
					}
				});
			});
		</script>
	</body>
</html>
