<section aria-label="Theme toggle">
    <!-- Switch to dark mode (sun icon shown in light mode) -->
    <button
        type="button"
        class="block dark:hidden p-2 rounded hover:bg-gray-200 cursor-pointer"
        onclick="document.dispatchEvent(new CustomEvent('set-theme', { detail: 'dark' }))"
        aria-label="Switch to dark mode"
    >
        <!-- Moon icon (outline style, dark mode symbol) -->
        <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-6 h-6 text-gray-800"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
        >
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M21 12.79A9 9 0 1111.21 3 7 7 0 0021 12.79z"></path>
        </svg>
    </button>

    <!-- Switch to light mode (moon icon shown in dark mode) -->
    <button
        type="button"
        class="hidden dark:block p-2 rounded hover:bg-gray-700 cursor-pointer"
        onclick="document.dispatchEvent(new CustomEvent('set-theme', { detail: 'light' }))"
        aria-label="Switch to light mode"
    >
        <!-- Sun icon (outline style, light mode symbol) -->
        <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-6 h-6 text-gray-100"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
        >
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 3v1m0 16v1m8.66-13.66l-.7.7M4.34 19.66l-.7-.7M21 12h-1M4 12H3m16.66 4.66l-.7-.7M4.34 4.34l-.7.7M12 8a4 4 0 100 8 4 4 0 000-8z"
            ></path>
        </svg>
    </button>
</section>
